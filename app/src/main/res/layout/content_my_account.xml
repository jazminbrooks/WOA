<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jazminbrooks.woa.MyAccount"
    tools:showIn="@layout/activity_my_account">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to your account!"
        android:id="@+id/UserGreeting"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Email"
        android:id="@+id/changeEmailButton"
        android:layout_above="@+id/changeUsernameButton"
        android:layout_alignLeft="@+id/changeUsernameButton"
        android:layout_alignStart="@+id/changeUsernameButton"
        android:layout_marginBottom="65dp"
        android:layout_alignRight="@+id/changeUsernameButton"
        android:layout_alignEnd="@+id/changeUsernameButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Username"
        android:id="@+id/changeUsernameButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/changePasswordButton"
        android:layout_below="@+id/changeUsernameButton"
        android:layout_alignLeft="@+id/changeUsernameButton"
        android:layout_alignStart="@+id/changeUsernameButton"
        android:layout_marginTop="75dp"
        android:layout_alignRight="@+id/changeUsernameButton"
        android:layout_alignEnd="@+id/changeUsernameButton"/>
</RelativeLayout>
